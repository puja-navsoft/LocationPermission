<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--
                <item name="android:statusBarColor">@color/splash_color</item>
        -->
        <item name="android:statusBarColor">@color/text_color_heading</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>


    <style name="RatingBar"
        parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:colorControlNormal">@color/star_color_unselected</item>
        <item name="android:colorControlActivated">#009688</item>
    </style>

    <style name="RatingBar_720"
        parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:colorControlNormal">@color/text_color_social</item>
        <item name="android:colorControlActivated">#009688</item>
    </style>

    <style name="RatingBar_600"
        parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:colorControlNormal">@color/text_color_social</item>
        <item name="android:colorControlActivated">#009688</item>
    </style>

    <style name="GlassRating" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/_10sdp</item>
        <item name="android:maxHeight">@dimen/_10sdp</item>

    </style>

</resources>
