<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bankdetailsscreen.BankDetailsScreen">

    <ScrollView
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:visibility="invisible"
                android:id="@+id/imageView33"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/left_arrow" />

            <TextView
                android:layout_marginEnd="18dp"
                android:id="@+id/textView49"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Bank Details"
                android:textColor="#242424"
                android:textSize="27sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView33"
                app:layout_constraintTop_toBottomOf="@+id/imageView33" />

            <EditText
                android:visibility="visible"
                android:id="@+id/et_accountHolderName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Account Holder Name *"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/textView78" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_bankname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Bank Name *"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/et_accountHolderName" />


            <EditText
                android:id="@+id/editAccountNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Account Number *"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:maxLines="12"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/et_bankname" />


            <EditText
                android:id="@+id/editTransit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Transit Number *"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/editAccountNumber" />


            <EditText
                android:id="@+id/editInstitution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Transit Number *"
                android:imeOptions="actionDone"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/editTransit" />

            <EditText
                android:id="@+id/etTransitNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Institution Number *"
                android:imeOptions="actionDone"
                android:paddingTop="5dp"
                android:singleLine="true"
                
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/editInstitution" />



            <EditText
                android:visibility="gone"
                android:id="@+id/editBranch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Branch Address *"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:paddingBottom="25dp"
                android:textColor="#919191"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/editInstitution" />


            <View
                android:id="@+id/transparentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background_2_trans"
                android:visibility="gone">


            </View>

            <TextView

                android:id="@+id/textView58"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Criminal Record Check"
                android:textColor="#242424"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/etTransitNumber" />

            <TextView
                android:id="@+id/clickcheckcriminalrecord"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/rounded_corner_3"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:text="Check Your Criminal Record"
                android:textColor="#242424"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView58" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Upload Criminal Record"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/clickcheckcriminalrecord"
                app:layout_constraintTop_toBottomOf="@+id/clickcheckcriminalrecord" />


            <ImageView
                android:visibility="visible"
                android:id="@+id/iv_criminalrecord"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="@+id/clickcheckcriminalrecord"
                app:layout_constraintTop_toBottomOf="@+id/textView74"
                app:srcCompat="@drawable/round_background_greylight" />

            <ImageView
                android:id="@+id/iv_criminalrecorddummy"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/clickcheckcriminalrecord"
                app:layout_constraintTop_toBottomOf="@+id/textView74"
                app:srcCompat="@drawable/pdf" />


            <ProgressBar
                android:id="@+id/pdloader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_criminalrecord"
                app:layout_constraintEnd_toEndOf="@+id/iv_criminalrecord"
                app:layout_constraintStart_toStartOf="@+id/iv_criminalrecord"
                app:layout_constraintTop_toTopOf="@+id/iv_criminalrecord"></ProgressBar>

            <ImageView
                android:id="@+id/iv_criminalrecordcam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@+id/iv_criminalrecord"
                app:layout_constraintEnd_toEndOf="@+id/iv_criminalrecord"
                app:layout_constraintStart_toStartOf="@+id/iv_criminalrecord"
                app:layout_constraintTop_toTopOf="@+id/iv_criminalrecord"
                app:srcCompat="@drawable/ic_baseline_arrow_circle_up_24" />


    <Button
        android:layout_marginBottom="35dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_criminalrecord"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_cntnue"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:background="@drawable/round_background_2"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="@dimen/_5sdp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_marginStart="25dp"
                android:id="@+id/tv_filenm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintBottom_toBottomOf="@+id/iv_criminalrecord"
                app:layout_constraintStart_toEndOf="@+id/iv_criminalrecord" />

            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/textView78"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black1"
                android:text="Muve-IT will deposit your earnings in your bank account. Please provide your bank account information."
                app:layout_constraintEnd_toEndOf="@+id/textView49"
                app:layout_constraintStart_toStartOf="@+id/textView49"
                app:layout_constraintTop_toBottomOf="@+id/textView49" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <include
        layout="@layout/verificationdocumentsheet"

        />



</androidx.coordinatorlayout.widget.CoordinatorLayout>