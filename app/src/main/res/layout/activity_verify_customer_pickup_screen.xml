<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/verifyviewInclude"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:id="@+id/iv_back"
        android:src="@drawable/left_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        />


    <TextView
        android:id="@+id/tv_verifypickupcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Verify Customer pickup code"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104" />

    <TextView
        android:layout_marginStart="20dp"

        android:layout_below="@+id/tv_verifypickupcode"
        android:layout_marginEnd="20dp"
        android:id="@+id/textView44"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15sp"
        android:textColor="#919191"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Request pickup code from customer and\nenter to start Service Call"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/lyt_code"
        android:layout_below="@+id/textView44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:weightSum="4">

        <EditText
            android:imeOptions="actionNext"
            android:id="@+id/edt_password1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_10sdp"/>

        <EditText
            android:imeOptions="actionNext"

            android:id="@+id/edt_password2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"/>
        <EditText
            android:imeOptions="actionNext"

            android:id="@+id/edt_password3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:maxLines="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"/>
        <EditText
            android:imeOptions="actionDone"
            android:id="@+id/edt_password4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/_15ssp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_weight="1"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/round_background_2"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Verify &amp; Continue"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14ssp" />



</RelativeLayout>