    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/view_pouseservice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceptservicecalltopview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:visibility="visible"
            android:id="@+id/tv_pouseservice"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/pouseservicebuttonblack"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:text="Pause Service"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@+id/view_pouseservice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view_pouseservice"
            app:layout_constraintTop_toTopOf="@+id/view_pouseservice" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>