<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="185dp"
    android:id="@+id/customercontact"
    android:visibility="gone"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        android:id="@+id/showhideview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/view_customercontact"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_background_2"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_customercontact"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Contact Customer"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_customercontact"
            app:layout_constraintEnd_toEndOf="@+id/view_customercontact"
            app:layout_constraintStart_toEndOf="@+id/iv_contact"
            app:layout_constraintTop_toTopOf="@+id/view_customercontact" />

        <ImageView
            android:id="@+id/iv_contact"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="73dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_customercontact"
            app:layout_constraintStart_toStartOf="@+id/view_customercontact"
            app:layout_constraintTop_toTopOf="@+id/view_customercontact"
            app:srcCompat="@drawable/msgicon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:layout_marginBottom="10dp"
            android:id="@+id/view_contactseconddaryassist"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_background_2"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/_10sdp"
            android:textAllCaps="false"

            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_customercontact" >

        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/tv_secondarycontact"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Contact Secondary Assist"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/view_contactseconddaryassist"
            app:layout_constraintEnd_toEndOf="@+id/view_contactseconddaryassist"
            app:layout_constraintStart_toEndOf="@+id/iv_secondary"
            app:layout_constraintTop_toTopOf="@+id/view_contactseconddaryassist" />

        <ImageView
            android:id="@+id/iv_secondary"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="43dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_contactseconddaryassist"
            app:layout_constraintStart_toStartOf="@+id/view_contactseconddaryassist"
            app:layout_constraintTop_toTopOf="@+id/view_contactseconddaryassist"
            app:srcCompat="@drawable/msgicon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:id="@+id/bottomshowhidepart"
        android:visibility="visible"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showhideview">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondPartContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Load/Unload assist"
                android:textColor="#242424"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/imagev_servicaCallPause"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView55"
                app:layout_constraintStart_toEndOf="@+id/textView55"
                app:layout_constraintTop_toTopOf="@+id/textView55"
                app:srcCompat="@drawable/information"
                tools:layout_editor_absoluteX="168dp" />

            <ImageView
                android:id="@+id/loadunloadiv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/imagev_servicaCallPause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imagev_servicaCallPause"
                app:srcCompat="@drawable/checkmarkcircle" />

            <View
                android:id="@+id/view29"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loadunloadiv"></View>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Unattended drop off"
                android:textColor="#242424"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/textView55"
                app:layout_constraintTop_toBottomOf="@+id/view29" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/iv_unatten"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView56"
                app:layout_constraintStart_toEndOf="@+id/textView56"
                app:layout_constraintTop_toTopOf="@+id/textView56"
                app:srcCompat="@drawable/information"
                tools:layout_editor_absoluteX="168dp" />


            <ImageView
                android:id="@+id/iv_unattentooltip"
                android:layout_width="19dp"
                android:layout_height="17dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/iv_unatten"
                app:layout_constraintStart_toStartOf="@+id/iv_unatten"
                app:layout_constraintTop_toBottomOf="@+id/iv_unatten"
                app:srcCompat="@drawable/up" />

            <ImageView
                android:id="@+id/unatndiv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView56"
                app:layout_constraintEnd_toEndOf="@+id/loadunloadiv"
                app:layout_constraintTop_toTopOf="@+id/textView56"
                app:srcCompat="@drawable/cancelfalseicon" />

            <View
                android:id="@+id/view30"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/unatndiv"></View>

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Cargo image"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/textView56"
                app:layout_constraintTop_toBottomOf="@+id/view30" />

            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/vehicle_image"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/vehicle_type"
                app:layout_constraintStart_toStartOf="@+id/view30"
                app:layout_constraintTop_toBottomOf="@+id/vehicle_type"
                app:srcCompat="@drawable/defaultperson" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_loadunloadtooltip"
                android:layout_width="19dp"
                android:layout_height="17dp"
                app:layout_constraintEnd_toEndOf="@+id/imagev_servicaCallPause"
                app:layout_constraintStart_toStartOf="@+id/imagev_servicaCallPause"
                app:layout_constraintTop_toBottomOf="@+id/imagev_servicaCallPause"
                app:srcCompat="@drawable/up" />

            <androidx.constraintlayout.widget.ConstraintLayout

                android:visibility="gone"
                android:paddingStart="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="8dp"
                android:background="@drawable/rounded_corner_9"
                android:id="@+id/tv_loadunloadtooltip"
                android:layout_width="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@+id/loadunloadiv"
                app:layout_constraintStart_toStartOf="@+id/textView55"
                app:layout_constraintTop_toBottomOf="@+id/iv_loadunloadtooltip" >

                <ImageView
                    android:layout_marginTop="7dp"
                    android:id="@+id/righticon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/checkmarkcircle"/>

                <TextView
                    android:id="@+id/righttext"
                    android:paddingStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="A Secondary Service Provider has been added to provide you with load/unload assistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/righticon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/righticon"
                    app:layout_constraintTop_toTopOf="@+id/righticon">

                </TextView>

                <ImageView
                    android:id="@+id/wrongicon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/righticon"
                    app:layout_constraintTop_toBottomOf="@+id/righttext"
                    app:srcCompat="@drawable/cancelfalseicon" />

                <TextView
                    android:id="@+id/textforwrong"
                    android:paddingStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text=" A Secondary Service Provider has NOT been added to provide load/unload assistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/wrongicon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/wrongicon"
                    app:layout_constraintTop_toTopOf="@+id/wrongicon">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:paddingStart="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="9dp"
                android:id="@+id/tv_unattentooltip"
                android:layout_width="0dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_9"

                app:layout_constraintEnd_toEndOf="@+id/unatndiv"
                app:layout_constraintStart_toStartOf="@+id/textView56"
                app:layout_constraintTop_toBottomOf="@+id/iv_unattentooltip" >

                <ImageView
                    android:layout_marginTop="7dp"
                    android:id="@+id/icon1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/checkmarkcircle">
                </ImageView>

                <TextView
                    android:id="@+id/righttext1"
                    android:paddingStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Customer has authorized the secure drop-off of their cargo at the destination address without a recipient being present"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/icon1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon1"
                    app:layout_constraintTop_toTopOf="@+id/icon1">

                </TextView>


                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/icon1"
                    app:layout_constraintTop_toBottomOf="@+id/righttext1"
                    app:srcCompat="@drawable/cancelfalseicon" />

                <TextView
                    android:id="@+id/textforwrong1"
                    android:paddingStart="10dp"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Customer or appointed recipient MUST be present at drop-off address to receive cargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/icon2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/icon2"
                    app:layout_constraintTop_toTopOf="@+id/icon2">

                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:padding="20dp"
            android:id="@+id/iv_uparrowhideview"
            android:layout_width="0dp"
            android:layout_height="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondPartContact"
            app:srcCompat="@drawable/uparrow" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>